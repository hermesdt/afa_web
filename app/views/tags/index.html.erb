<h1>Listing tags</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.name %></td>
    <td class="td-no-bg"><%= link_to 'Show', tag %></td>
    <td class="td-no-bg"><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td class="td-no-bg"><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="grouped-links">
<%= link_to 'New Tag', new_tag_path %>
</div>

