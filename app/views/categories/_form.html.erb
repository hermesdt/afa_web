<% remote = request.xhr? %>
<div id="category_error_explanation"></div>
<%= form_for(@category, :remote => remote) do |f| %>
  <% if @category.errors.any? %>
  <%= render :partial => 'error_explanation' %>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% if request.xhr? %>
  <%= link_to 'Close', '#', :remote => true, :onclick => "#{hide_dialog}" %>
<% end %>
