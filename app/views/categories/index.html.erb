<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td>
    <%= link_to image_show, category %>
    <%= link_to image_edit, edit_category_path(category) if can?("manage", "Category") %>
    <%= link_to image_destroy, category, :confirm => 'Are you sure?', 
    :method => :delete if can?("manage", "Category") %> </td>
  </tr>
<% end %>
</table>

<br />

<div class="grouped-links">
<%= link_to image_add() + ' New Category', new_category_path if can?("manage", "Category") %>
</div>

