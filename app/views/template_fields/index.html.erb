<h1>Listing template_fields</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Values</th>
    <th>Tech col name</th>
    <th>Field category</th>
  </tr>

<% @template_fields.each do |template_field| %>
  <tr>
    <td><%= template_field.name %></td>
    <td><%= template_field.join_values %></td>
    <td><%= template_field.tech_col_name %></td>
    <td><%= template_field.field_category.name %></td>
    <td class="td-no-bg"><%= link_to 'Show', template_field %></td>
    <td class="td-no-bg"><%= link_to 'Edit', edit_template_field_path(template_field) %></td>
    <td class="td-no-bg"><%= link_to 'Destroy', template_field, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="grouped-links">
<%= link_to 'New Template field', new_template_field_path %>
</div>

