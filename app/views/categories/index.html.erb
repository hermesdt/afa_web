<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td class="td-no-bg"><%= link_to 'Show', category %></td>
    <td class="td-no-bg"><%= link_to 'Edit', edit_category_path(category) %></td>
    <td class="td-no-bg"><%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="grouped-links">
<%= link_to 'New Category', new_category_path %>
</div>

