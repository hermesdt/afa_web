
<% for post in @posts %>
<div class="post ui-corner-all">
  <div class="field ui-corner-all title"><%= link_to post.title, post_path(post) %></div>
  <div class="field ui-corner-all text">
    <%= raw post.text %>
  </div>
  <div class="field ui-corner-all author">Author: <%= post.author_id %></div>
  <div class="field ui-corner-all updated_at">Updated at: <%= post.updated_at %></div>
</div>
<% end %>
